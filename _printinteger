#include "main.h"

/**
* print_integer - Print an integer
* @arg_list: List of arguments
*
*
* Return: Number of characters printed
*/

int print_integer(va_list arg_list)
{
	int num = va_arg(arg_list, int);
	int printed = 0;
	int divisor;

	if (num < 0)
	{
		_writechar(-);
		printed++;
		num = -num;
	}

	divisor = 1;
	while (num / divisor > 9)
	{
		divisor *= 10;
	}
	while (divisor != 0)
	[
		_writechar((num / divisor) + '0');
		printed++;
		num %= divisor;
		divisor /= 10;
	}
	return printed;
}
